package estrutura_repetitiva;

import java.util.Scanner;

public class ex_001 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int x, gasolina = 0, alcool = 0, diesel = 0;
		System.out.println("INSIRA TIPO DO COMBUSTIVEL DE 1 a 3, ou 4 pra encerrar:");
		x = sc.nextInt();

		while (x != 4) {
			if (x == 1) {
				gasolina += 1;
			} else if (x == 2) {
				alcool += 1;
			} else if (x == 3) {
				diesel += 1;
			} else {
				System.out.println("POR FAVOR, DIGITE DE 1 a 3");
			}
			x = sc.nextInt();
		}
		System.out.printf("MUITO OBRIGADO%n Alcool: %d%n Gasolina: %d%n Diesel: %d%n", alcool,gasolina,diesel);
		
		sc.close();
	}
}
